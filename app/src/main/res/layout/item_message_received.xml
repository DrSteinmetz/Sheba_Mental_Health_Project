<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/message_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/message_body_tv"
        app:tint="@color/design_default_color_secondary"
        android:src="@drawable/ic_message_received_corner" />

    <TextView
        android:id="@+id/message_body_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/message_received_shape"
        android:backgroundTint="@color/design_default_color_secondary"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/message_corner"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:paddingTop="11dp"
        app:layout_goneMarginStart="10dp"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/message_body_tv"
        app:layout_constraintStart_toStartOf="@+id/message_body_tv"
        app:layout_constraintTop_toBottomOf="@+id/message_body_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>