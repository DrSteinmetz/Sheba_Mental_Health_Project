<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context=".view.PreMeetingCharacterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/start_meeting_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/finish_btn"
            android:clickable="false"
            android:focusable="false">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="What would you like to share?"/>

            <TextView
                android:id="@+id/sub_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:textSize="17sp"
                android:text="Press on character"
                android:layout_below="@+id/title_tv"/>



            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/character_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/sub_title_tv" />

        </RelativeLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/finish_btn"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="Finish"
            style="@style/blue_btn" />

    </RelativeLayout>

</RelativeLayout>