<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CharacterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/character_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_character" />

        <View
            android:id="@+id/head_v"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@null" />

        <View
            android:id="@+id/arm_left_v"
            android:layout_width="50dp"
            android:layout_height="340dp"
            android:layout_alignStart="@+id/character_iv"
            android:layout_marginTop="150dp"
            android:layout_marginStart="20dp"
            android:background="@null" />

        <View
            android:id="@+id/arm_right_v"
            android:layout_width="50dp"
            android:layout_height="340dp"
            android:layout_alignEnd="@+id/character_iv"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="20dp"
            android:background="@null" />

        <View
            android:id="@+id/center_of_mass_v"
            android:layout_width="100dp"
            android:layout_height="220dp"
            android:layout_alignTop="@+id/character_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:background="@null" />

        <View
            android:id="@+id/genitals_v"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/character_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="400dp"
            android:background="@null" />

        <View
            android:id="@+id/legs_v"
            android:layout_width="150dp"
            android:layout_height="350dp"
            android:layout_alignBottom="@+id/character_iv"
            android:layout_centerHorizontal="true"
            android:background="@null" />

    </RelativeLayout>

</ScrollView>