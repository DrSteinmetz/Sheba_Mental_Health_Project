<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:focusable="true"
    android:clickable="true"
    tools:context=".view.HeadFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="15dp">

        <ImageView
            android:id="@+id/body_part_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_head"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/forehead_iv"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignTop="@id/forehead_v"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_red_pain_point"
                        android:visibility="gone"
                        android:scaleType="fitCenter" />
                    <View
                        android:id="@+id/forehead_v"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:orientation="horizontal">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3" />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <ImageView
                        android:id="@+id/right_ear_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignTop="@id/right_ear_v"
                        android:layout_alignStart="@id/right_ear_v"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/ic_red_pain_point"
                        android:visibility="gone"
                        android:scaleType="fitCenter" />
                    <View
                        android:id="@+id/right_ear_v"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <ImageView
                        android:id="@+id/right_eye_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignTop="@id/right_eye_v"
                        android:layout_alignStart="@id/right_eye_v"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/ic_red_pain_point"
                        android:visibility="gone"
                        android:scaleType="fitCenter" />
                    <View
                        android:id="@+id/right_eye_v"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3" />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <ImageView
                        android:id="@+id/left_eye_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignTop="@id/left_eye_v"
                        android:layout_alignStart="@id/left_eye_v"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/ic_red_pain_point"
                        android:visibility="gone"
                        android:scaleType="fitCenter" />
                    <View
                        android:id="@+id/left_eye_v"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <ImageView
                        android:id="@+id/left_ear_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignTop="@id/left_ear_v"
                        android:layout_alignStart="@id/left_ear_v"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/ic_red_pain_point"
                        android:visibility="gone"
                        android:scaleType="fitCenter" />
                    <View
                        android:id="@+id/left_ear_v"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/nose_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@id/nose_v"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_red_pain_point"
                        android:visibility="gone"
                        android:scaleType="fitCenter" />
                    <View
                        android:id="@+id/nose_v"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/mouth_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@id/mouth_v"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_red_pain_point"
                        android:visibility="gone"
                        android:scaleType="fitCenter" />
                    <View
                        android:id="@+id/mouth_v"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/neck_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@id/neck_v"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_red_pain_point"
                        android:visibility="gone"
                        android:scaleType="fitCenter" />
                    <View
                        android:id="@+id/neck_v"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true" />

                </RelativeLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" />

        </LinearLayout>

    </RelativeLayout>
