<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.therapist.AddPatientFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="40dp">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="@string/add_new_patient"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textAllCaps="false" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_et_layout"
            android:layout_below="@id/title_tv"
            android:layout_marginTop="30dp"
            android:hint="@string/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/light_gray"
            app:boxStrokeWidth="1.2dp"
            app:boxCornerRadiusBottomEnd="0dp"
            app:boxCornerRadiusBottomStart="0dp"
            app:boxCornerRadiusTopEnd="0dp"
            app:boxCornerRadiusTopStart="0dp"
            app:hintTextColor="@color/light_blue"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_et"
                android:gravity="center"
                android:inputType="textEmailAddress"
                style="@style/textInputEditText"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_et_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_et_layout"
            android:layout_marginTop="20dp"
            app:passwordToggleEnabled="true"
            android:hint="@string/password"
            app:boxStrokeColor="@color/light_gray"
            app:boxStrokeWidth="1.2dp"
            app:boxCornerRadiusBottomEnd="0dp"
            app:boxCornerRadiusBottomStart="0dp"
            app:boxCornerRadiusTopEnd="0dp"
            app:boxCornerRadiusTopStart="0dp"
            app:hintTextColor="@color/light_blue"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_et"
                android:gravity="center"
                android:inputType="textPassword"
                style="@style/textInputEditText" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/first_name_et_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_et_layout"
            android:layout_marginTop="20dp"
            android:hint="@string/first_name"
            app:boxStrokeColor="@color/light_gray"
            app:boxStrokeWidth="1.2dp"
            app:boxCornerRadiusBottomEnd="0dp"
            app:boxCornerRadiusBottomStart="0dp"
            app:boxCornerRadiusTopEnd="0dp"
            app:boxCornerRadiusTopStart="0dp"
            app:hintTextColor="@color/light_blue"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/first_name_et"
                android:gravity="center"
                android:inputType="textPersonName"
                style="@style/textInputEditText" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/last_name_et_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_name_et_layout"
            android:layout_marginTop="20dp"
            android:hint="@string/last_name"
            app:boxStrokeColor="@color/light_gray"
            app:boxStrokeWidth="1.2dp"
            app:boxCornerRadiusBottomEnd="0dp"
            app:boxCornerRadiusBottomStart="0dp"
            app:boxCornerRadiusTopEnd="0dp"
            app:boxCornerRadiusTopStart="0dp"
            app:hintTextColor="@color/light_blue"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/last_name_et"
                android:gravity="center"
                android:inputType="textPersonName"
                style="@style/textInputEditText" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_new_patient_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="35dp"
            android:layout_below="@id/last_name_et_layout"
            android:text="@string/add"
            style="@style/blue_btn" />

    </RelativeLayout>

</ScrollView>