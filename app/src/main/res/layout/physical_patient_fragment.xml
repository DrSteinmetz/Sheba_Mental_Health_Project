<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:background="@color/white"
    tools:context=".view.patient.PhysicalPatientFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/physical_patient_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/home_screen_btn"
            android:clickable="false"
            android:focusable="false">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="@string/do_you_feel_pain" />

            <TextView
                android:id="@+id/sub_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:textSize="17sp"
                android:text="@string/select_body_part"
                android:layout_below="@+id/title_tv" />



            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/character_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/sub_title_tv" />

        </RelativeLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_screen_btn"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="@string/home_screen"
            android:textSize="20sp"
            style="@style/blue_btn" />

    </RelativeLayout>

</RelativeLayout>