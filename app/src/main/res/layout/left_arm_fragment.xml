<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:focusable="true"
    android:clickable="true"
    tools:context=".view.LeftArmFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/body_part_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="20dp"
            android:src="@drawable/ic_left_arm"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/shoulder_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@id/body_part_iv"
            android:layout_marginTop="30dp"
            android:layout_alignEnd="@id/body_part_iv"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_red_pain_point"
            android:visibility="gone"
            android:scaleType="fitCenter" />
        <View
            android:id="@+id/shoulder_v"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignTop="@id/body_part_iv"
            android:layout_alignEnd="@id/body_part_iv"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/elbow_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@id/body_part_iv"
            android:layout_alignEnd="@id/body_part_iv"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/ic_red_pain_point"
            android:visibility="gone"
            android:scaleType="fitCenter" />
        <View
            android:id="@+id/elbow_v"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignTop="@id/body_part_iv"
            android:layout_alignEnd="@id/body_part_iv"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="5dp" />

        <ImageView
            android:id="@+id/hand_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/body_part_iv"
            android:layout_alignStart="@id/body_part_iv"
            android:layout_marginBottom="45dp"
            android:layout_marginStart="35dp"
            android:src="@drawable/ic_red_pain_point"
            android:visibility="gone"
            android:scaleType="fitCenter" />
        <View
            android:id="@+id/hand_v"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@id/body_part_iv"
            android:layout_alignStart="@id/body_part_iv"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="20dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

</LinearLayout>