<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.BureaucracyFragment"
    android:background="@color/white"
    android:focusable="true"
    android:clickable="true"
    android:padding="20dp">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="Things I need today:"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textAllCaps="false" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/questions_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_tv"
        android:layout_above="@id/add_document_tv"
        android:scrollbarAlwaysDrawVerticalTrack="true" />

    <TextView
        android:id="@+id/add_document_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/continue_btn"
        android:layout_marginTop="30dp"
        app:drawableStartCompat="@drawable/ic_round_add_white_24"
        app:drawableTint="@color/black"
        android:text="Add a Document"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textAllCaps="false" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continue_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:text="Continue"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAllCaps="false" />

</RelativeLayout>