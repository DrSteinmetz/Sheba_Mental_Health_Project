<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/message_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/message_body_tv"
        app:tint="#6fdbdb"
        android:src="@drawable/ic_message_sent_corner" />

    <TextView
        android:id="@+id/message_body_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/message_sent_shape"
        android:backgroundTint="#6fdbdb"
        android:maxWidth="240dp"
        android:padding="8dp"

        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/message_corner"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textSize="11sp"
        android:paddingTop="20dp"

        android:textColor="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="@+id/message_body_tv"
        app:layout_constraintEnd_toEndOf="@+id/message_body_tv"
        app:layout_constraintTop_toBottomOf="@+id/message_body_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>